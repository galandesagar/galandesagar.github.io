
@using TrackCandidate.Utilities

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        Candidate Track
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <!-- CSS Files -->
    <link href="../assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="../assets/css/now-ui-dashboard.css?v=1.5.0" rel="stylesheet" />
    <!--   Core JS Files   -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="../assets/js/core/popper.min.js"></script>
    <script src="../assets/js/core/bootstrap.min.js"></script>
    <script src="../assets/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/vdubus/jquery-multiSelect@master/jquery-multiSelect.js"></script>
    <link href="https://cdn.jsdelivr.net/gh/vdubus/jquery-multiSelect@master/jquery-multiSelect.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.ui.timepicker.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    <!-- CSS Just for demo purpose, don't include it in your project -->
   
</head>


<body class="">
    <div class="wrapper ">
        <div class="sidebar" data-color="orange">
            <!--
                Tip 1: You can change the color of the sidebar using: data-color="blue | green | orange | red | yellow"
            -->
            <div class="logo">

                <a href="#" class="simple-text logo-normal">
                    Candidate Track
                </a>
            </div>
            <div class="sidebar-wrapper" id="sidebar-wrapper">
                <ul class="nav">
                    <li class="@Html.IsActive("Home", "Index",1)">
                        <a href="@Url.Action("Index","Home")">
                            <i class="now-ui-icons design_app"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li class="@Html.IsActive("Home", "Candidate",1)" id="liCandidate" style="display:none">
                        <a href="@Url.Action("Candidate","Home")">
                            <i class="now-ui-icons education_atom"></i>
                            <p>Candidate</p>
                        </a>
                    </li>
                    <li class="@Html.IsActive("Home", "Vendor",1)" id="liVendor" style="display:none">
                        <a href="@Url.Action("Vendor","Home")">
                            <i class="now-ui-icons location_map-big"></i>
                            <p>Vendor</p>
                        </a>
                    </li>
                    <li class="@Html.IsActive("Home", "Invoice",1)" id="liInvoice" style="display:none">
                        <a href="@Url.Action("Invoice","Home")">
                            <i class="now-ui-icons location_map-big"></i>
                            <p>Invoice</p>
                        </a>
                    </li>
                    <li class="nav-item" id="liReport" style="display:none">
                        <a class="nav-link collapsed" id="submenulink" data-target="#collapseTwo" data-toggle="collapse" aria-expanded="false" aria-controls="collapseTwo">
                            <i class="fas fa-clipboard-list"></i>
                            <span>Report</span><span class="arrow"></span>

                        </a>
                        <ul id="collapseTwo" class="collapse" aria-expanded="false">
                            <li class="">
                                <a class=" @Html.IsActive("Home", "Report", 1)" href="@Url.Action("Report","Home")">Time Off Report</a>

                            </li>
                            <li class="">
                                <a class=" @Html.IsActive("Home", "InvoiceReport", 1)" href="@Url.Action("InvoiceReport","Home")">Invoice Report</a>

                            </li>
                        </ul>

                    </li>
                    <li class="@Html.IsActive("Home", "InvoiceAutoMailSetting",1)" id="liInvoiceAutoMailSetting" style="display:none">
                        <a href="@Url.Action("InvoiceAutoMailSetting","Home")">
                            <i class="now-ui-icons ui-1_bell-53"></i>
                            <p>Setting</p>
                        </a>
                    </li>


                </ul>
            </div>
        </div>

        <nav class="navbar navbar-expand-lg navbar-transparent  bg-primary  navbar-absolute" style="background-color: #1f174f !important;">
            <div class="container-fluid">
                <div class="navbar-wrapper">
                    <div class="navbar-toggle">
                        <button type="button" class="navbar-toggler">
                            <span class="navbar-toggler-bar bar1"></span>
                            <span class="navbar-toggler-bar bar2"></span>
                            <span class="navbar-toggler-bar bar3"></span>
                        </button>
                    </div>
                    <a class="navbar-brand" href="#pablo">Dashboard</a>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-bar navbar-kebab"></span>
                    <span class="navbar-toggler-bar navbar-kebab"></span>
                    <span class="navbar-toggler-bar navbar-kebab"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navigation">

                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link dropdown-toggle" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="now-ui-icons users_single-02"></i>
                                <p>
                                    <span class="d-lg-none d-md-block">Account</span>
                                </p>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="@Url.Action("Login","Home")">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->

        <div class="main-panel" id="main-panel">
            <div class="container-fluid">
                @RenderBody()

            </div>
        </div>


    </div>
 

    <script>
        if (sessionStorage.getItem("UserName") == "steve.burdick@softwaremerchant.com") {
            $("#liCandidate").hide();
            $("#liVendor").hide();
            $("#liReport").show();
            $("#liInvoice").hide();
            $("#liInvoiceAutoMailSetting").hide();
        }
        else {
            $("#liCandidate").show();
            $("#liVendor").show();
            $("#liReport").show();
            $("#liInvoice").show();
            $("#liInvoiceAutoMailSetting").show();

        }
        $(".nav-link").on('click', function () {
            var navbar = $(this).text()
            if (navbar.toString() == "Report" || navbar.toString() == "InvoiceReport") {
                sessionStorage.setItem("SubmenusSelect", true)
            }
            else {
                sessionStorage.setItem("SubmenusSelect", false)
            }
        });
    </script>
</body>

</html>
